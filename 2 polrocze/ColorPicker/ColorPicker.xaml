<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColorPicker.ColorPicker"
             Title="ColorPicker">
        <VerticalStackLayout x:Name="tlo" Padding="50" BackgroundColor="Beige">
        <Frame CornerRadius="20" BackgroundColor="White">
            <VerticalStackLayout BackgroundColor="White" Padding="50">
                <Label FontSize="30"
                   Padding="20"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   >
                    Color Picker
                </Label>
                <Label FontSize="20"
                   Padding="20"
                   TextColor="Black"
                   HorizontalOptions="StartAndExpand"
                   >
                    Red value:
                </Label>
                <Slider x:Name="sld_Red"
                    ThumbColor="Red"
                    Margin="20"
                    HeightRequest="25"
                    ValueChanged="zmienSuwak"
                    >
                </Slider>
                <Label FontSize="20"
                   Padding="20"
                   TextColor="Black"
                   HorizontalOptions="StartAndExpand"
                   >
                    Green value:
                </Label>
                <Slider x:Name="sld_Green"
                    ThumbColor="green"
                    Margin="20"
                    HeightRequest="25"
                    ValueChanged="zmienSuwak"
                    >
                </Slider>
                <Label FontSize="20"
                   Padding="20"
                   TextColor="Black"
                   HorizontalOptions="StartAndExpand"
                   >
                    Blue value:
                </Label>
                <Slider x:Name="sld_Blue"
                    ThumbColor="Blue"
                    Margin="20"
                    HeightRequest="25"
                    ValueChanged="zmienSuwak"
                    >
                </Slider>
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label x:Name="hex"
                   FontSize="30"
                   Padding="20"
                   TextColor="Black"
                   >
                        #000000
                    </Label>
                    <Image Source="copyicon.png"
                       HeightRequest="30"
                       WidthRequest="60"
                       x:Name="hex_Copy"
                       />
                </HorizontalStackLayout>
                <Button x:Name="rnd_Color"
                    Clicked="rnd_Color_Clicked"
                    Text="Generate Random Color"
                    FontSize="20"
                    FontFamily="Arial Light"
                    WidthRequest="300"
                    >
                </Button>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>